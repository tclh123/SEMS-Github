@model SEMS.Models.Evaluation_entry

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

@Html.ValidationSummary(true,"修改失败!")

<script src="../../../Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="../../../Scripts/jquery.validate.unobtrusive.min.js" type="text/jscript"></script>

<h2>修改项目信息</h2>

@using (Html.BeginForm(new
{
    id = ViewBag.ID
}))
{
    <fieldset>
        <legend>添加新的测评项目</legend>
        <!--学年-->
        <div class="editor-label">
            @Html.LabelFor(m => m.entry_school_year)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.entry_school_year)
            @Html.ValidationMessageFor(m => m.entry_school_year)
        </div>
        <!--学期-->
        <div class="editor-label">
            @Html.LabelFor(m => m.entry_semester)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.entry_semester, new List<SelectListItem>()
            {
                {new SelectListItem(){Text="春",Value="春"}},
                {new SelectListItem(){Text="秋",Value="秋"}}
            })
            @Html.ValidationMessageFor(m => m.entry_semester)
        </div>
        <!--描述-->
        <div class="editor-label">
            @Html.LabelFor(m => m.entry_description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.entry_description)
            @Html.ValidationMessageFor(m => m.entry_description)
        </div>
        <!--开始时间-->
        <div class="editor-label">
            @Html.LabelFor(m => m.entry_date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.entry_date)      <!-- 用EditorFor，能使用Model的DisplayFormat -->
            @Html.ValidationMessageFor(m => m.entry_date)
        </div>
        <!--所属模块-->
        <div class="editor-label">
            @Html.LabelFor(m => m.module_id)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.module_id, (SelectList)ViewBag.List)
            @Html.ValidationMessageFor(m => m.module_id)
        </div>

        <input type="submit" value="修改" />
    </fieldset>
}
