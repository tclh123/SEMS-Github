@model SEMS.ViewModels.ModifyScore

@{
    ViewBag.Title = "SingleModify";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

@Html.ValidationSummary(true,"不存在此学生!")

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>单个成绩修改</h2>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>修改特定学生的特定项目分数</legend>

        <div class="editor-label">
            @Html.LabelFor(m=>m.entry_id)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m=>m.entry_id,(List<SelectListItem>) ViewBag.List)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m=>m.student_id)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m=>m.student_id)
            @Html.ValidationMessageFor(m=>m.student_id)
        </div>

        <div class="editor-field">
            @Html.LabelFor(m=>m.score)
        </div>
        <div class="editor-fiedl">
            @Html.EditorFor(m=>m.score)
            @Html.ValidationMessageFor(m=>m.score)
        </div>

        <input type="submit" value="确认修改" />
    </fieldset>
}