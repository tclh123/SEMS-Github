<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>综合测评管理系统后台 - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site_Admin.css")" rel="stylesheet" type="text/css" />
    <!--
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    -->
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>

<body>
    <div class="page">
       <div id="header">
            <div id="title">
                <h1>综合测评管理系统后台</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("班级管理", "Index", "Classes")</li>
                    <li>@Html.ActionLink("学生管理", "Index", "Student")</li>
                    <li>@Html.ActionLink("测评项目管理", "Index", "Entry")</li>
                    <li>@Html.ActionLink("成绩管理","Index","Score")</li>
                    <li>@Html.ActionLink("模块管理","Index","Module")</li>
                    <li>@Html.ActionLink("系统查询","Index","SystemDetails")</li>
                    <li>@Html.ActionLink("账户管理", "Index", "Account")</li>
                    <li>@Html.ActionLink("公告管理","Index","News")</li>
                    <li>@Html.ActionLink("系统管理","Index","System")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
