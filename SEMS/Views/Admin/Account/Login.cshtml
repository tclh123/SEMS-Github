@model SEMS.Models.Administrater
@{
    ViewBag.Title = "登陆";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}
<h1>
    管理员登陆页面</h1>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "登陆失败！")

@using (Html.BeginForm())
{
    <div>
        <fieldset>
            <legend>Account Information</legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.admin_id)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.admin_id)
                @Html.ValidationMessageFor(m => m.admin_id)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.admin_pwd)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.admin_pwd)
                @Html.ValidationMessageFor(m => m.admin_pwd)
            </div>
            <p>
                <input type="submit" value="登陆"/>
            </p>
        </fieldset>
    </div>
}