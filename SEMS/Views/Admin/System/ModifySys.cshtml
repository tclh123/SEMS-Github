@model SEMS.Models.Sysinfo

@{
    ViewBag.Title = "修改系统表";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true,"修改失败!")

<h2>修改系统表</h2>

<p>在此处可以修改系统表的学年学期</p>

@{List<SelectListItem> list=new List<SelectListItem>(){{new SelectListItem(){Text="春",Value="春"}},{new SelectListItem(){Text="秋",Value="秋"}}};
}

@using (Html.BeginForm())
{
    <div class="editor-label">@Html.LabelFor(m=>m.sysinfo_school_year)</div>
    <div class="editor-field">@Html.EditorFor(m=>m.sysinfo_school_year) @Html.ValidationMessageFor(m=>m.sysinfo_school_year)</div>
    
    <div class="editor-label">@Html.LabelFor(m=>m.sysinfo_semester)</div>
    <div class="editor-field">@Html.DropDownListFor(m=>m.sysinfo_semester,list)</div>
    
    <input type="submit" value="确认修改"/>
}
