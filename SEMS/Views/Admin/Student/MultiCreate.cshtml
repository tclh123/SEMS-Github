@model System.Web.HttpContextBase

@{
    ViewBag.Title = "MultiCreate";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

<h2>批量添加学生</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "上传失败!")

<ul>
    <li>@Html.ActionLink("下载Excel模板", "DownloadTemplate")</li>
</ul>

@using (Html.BeginForm("MultiCreate", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <p>@Html.Label("请选择学生班级")</p>
    <p>@Html.DropDownList("selectedclass") </p>
    <p>@Html.DropDownList("smallid")</p>
    <text>选择上传文件：</text><input name="file" type="file" />
    <br />
    <br />
    <input type="submit" name="Upload" value="Upload" />
}
