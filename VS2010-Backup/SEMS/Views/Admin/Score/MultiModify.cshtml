@model SEMS.ViewModels.ModifyScore

@{
    ViewBag.Title = "批量成绩修改";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>批量成绩修改</h2>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>批量修改项目成绩</legend>
        
        <div class="editor-label">
            @Html.LabelFor(m=>m.entry_id)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m=>m.entry_id,(List<SelectListItem>)ViewBag.List)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m=>m.score)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m=>m.score)
        </div>

        <input type="submit" value="确认修改" />
    </fieldset>
}
