@model SEMS.Models.Classes

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

<h2>添加班级信息</h2>

@Html.ValidationSummary(true, "添加失败!")

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>添加班级信息</legend>
        <p><strong>添加12级及以后的班级信息时,在班级一栏填入完整班号,在小班处填入班名(01、02....08) 不久会更新数据库结构以求得更合理的表示</strong></p>
        <!--班级号-->
        <div class="editor-label">
            @Html.LabelFor(m=>m.class_id)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(m=>m.class_id)
            @Html.ValidationMessageFor(m=>m.class_id)
        </div>
        <!--小班号-->        
        <div class="editor-label">
            @Html.LabelFor(m=>m.class_small_id)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(m => m.class_small_id)
            @Html.ValidationMessageFor(m => m.class_small_id)
        </div>
        <!--年级-->
        <div class="editor-label">
            @Html.LabelFor(m => m.class_grade)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(m => m.class_grade)
            @Html.ValidationMessageFor(m => m.class_grade)
        </div>

        <input type="submit" value="确认添加"/>

    </fieldset>
}
